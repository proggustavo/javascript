<div class="card">
  <h5 class="card-header">{{title}}</h5>
  <div class="card-body">
    <h5 class="card-title">Dados da Inscrição</h5>
    <form action="/edition/{{id}}" method="post"> 
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" name="name" value={{name}} >
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Telefone:</label>
            <input type="phone" class="form-control" name="phone" value={{phone}} >
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Data de Nascimento:</label>
            <input type="date" class="form-control" name="date" id="date" value={{date}} >
        </div>
        <div class="mb-3">
            <label for="gender" class="form-label">Gênero:</label>
            <input type="text" class="form-control" name="gender" id="gender" value={{gender}} >
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" name="email" id="email" value={{email}} >
        </div>
    <button type="submit" class="btn btn-success">Alterar</button>
    <a href="/list" type="submit" class="btn btn-primary">Voltar</a>
    </form>
  </div>
</div>